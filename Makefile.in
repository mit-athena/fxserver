# $Id: Makefile.in,v 1.1 1999-09-28 22:12:59 danw Exp $

SHELL=/bin/sh
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
VPATH=@srcdir@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
sbindir=@bindir@

CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
DEFS=@DEFS@
LDFLAGS=@LDFLAGS@
LIBS=-lfxcl @KRB4_LIBS@ @HESIOD_LIBS@ @LIBS@
ALL_CFLAGS=-I. ${CPPFLAGS} ${CFLAGS} ${DEFS}

OBJS=	db.o commands.o main.o multi.o util.o

all: fxserver

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

fxserver: ${OBJS}
	${CC} ${LDFLAGS} -o $@ ${OBJS} ${LIBS}

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${sbindir}
	${INSTALL_PROGRAM} fxserver ${DESTDIR}${sbindir}

clean:
	rm -f fxserver ${OBJS}

distclean: clean
	rm -f config.cache config.log config.status Makefile
